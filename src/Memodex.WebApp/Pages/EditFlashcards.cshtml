@page
@using Memodex.WebApp.Pages.Shared
@model EditFlashcards

@{
    Layout = "Shared/_Layout";
    BackButton backButton = new(Url.Page("EditDeck", new { deckId = Model.CurrentPageInfo!.DeckId }));
}

<partial name="Shared/_BackButtonPartial" model="@backButton"/>

<div class="mb-6">
    <h1>Manage Your Flashcards</h1>
    <p class="pb-2">
        Dive into the heart of your learning experience. Add, edit, or delete your flashcards below to curate your perfect deck.
    </p>
</div>

<div class="text-right mb-6">
    <a href="@Url.Page("AddFlashcard", new { deckId = Model.CurrentPageInfo!.DeckId })"
       class="btn-outline">
        Add Flashcard
    </a>
</div>
<div role="list">
    <partial name="Shared/_FlashcardsListPartial" model="@Model.CurrentPageInfo" class="py-10"/>
</div>
<span data-testid="flashcard list end"></span>
