@model Memodex.WebApp.Pages.EditFlashcards.EditFlashcardItem

<div class="flex justify-between border-none" hx-swap="outerHTML" hx-target="this">
    @Html.AntiForgeryToken()
    <form id="edit-flashcard"
          hx-post="/editflashcards?handler=updateflashcard"
          hx-headers="javascript:{'RequestVerificationToken': document.querySelector('input[name=__RequestVerificationToken]').value}"
          hx-trigger="save"
          class="flex justify-between items-center w-full pb-2 space-x-4">

        <input type="hidden" name="flashcardId" value="@Model.Id"/>
        <div class="flex-grow">
            <label>
                Question:
            </label>
            <textarea asp-for="Question"></textarea>
            <label>
                Answer:
            </label>
            <textarea asp-for="Answer">textarea</textarea>
        </div>
        <div class="flex flex-col items-center space-y-2">
            <button type="button"
                    hx-include="#edit-flashcard"
                    _="on click trigger save"
                    class="border rounded p-1 border-slate-500">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"/>
                </svg>

            </button>
            @{
                string editFlashcardUrl = $"EditFlashcards?handler=EditFlashcard&flashcardId={Model.Id}";
            }
            <button type="button"
                    hx-get="@editFlashcardUrl"
                    hx-trigger="cancel"
                    _="on click trigger cancel"
                    class="border rounded p-1 border-slate-500">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                </svg>

            </button>
        </div>
    </form>
</div>
