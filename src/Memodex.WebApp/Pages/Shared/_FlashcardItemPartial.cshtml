@model Memodex.WebApp.Pages.EditFlashcards.FlashcardItem        

<div class="flex pt-2" hx-swap="outerHTML" hx-target="this">
    @Html.AntiForgeryToken()

    <div>
        <div class="flex text-gray-400 dark:text-slate-700">

            @{
                string editFlashcardUrl = $"EditFlashcards?handler=Edit&flashcardId={Model.Id}";
            }
            <button _="on click trigger edit"
                    hx-get="@editFlashcardUrl"
                    hx-trigger="edit"
                    class="btn-icon">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 012.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
                </svg>
            </button>
            @{
                string deleteFlashcardUrl = $"EditFlashcards?handler=DeleteFlashcard&flashcardId={Model.Id}";
            }
            <button class="btn-icon"
                    hx-post="@deleteFlashcardUrl"
                    hx-trigger="delete"
                    hx-confirm="Are you sure you want to delete this flashcard? This will also remove any challenge steps associated with it."
                    hx-headers="javascript:{'RequestVerificationToken': document.querySelector('input[name=__RequestVerificationToken]').value}"
                    _="on click trigger delete">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"/>
                </svg>
            </button>
            <span class="ml-auto">
                question @Model.OrdinalNumber
            </span>
        </div>
        <div class="dark:text-gray-800 border rounded-xl shadow-xl p-5 mt-5">
            <h3 class="py-2 text-slate-800 dark:text-slate-400">
                <pre class="whitespace-pre-wrap">@Model.Question</pre>
            </h3>
            <hr/>
            <h3 class="transition-all text-slate-800 dark:text-slate-400" id="answer">
                <pre class="whitespace-pre-wrap">@Model.Answer</pre>
            </h3>
        </div>
    </div>

</div>
