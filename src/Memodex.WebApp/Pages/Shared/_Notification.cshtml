@if (TempData.TryGetValue("Notification", out object? value))
{
    string? notification = value?.ToString();
    if (notification is null)
    {
        return;
    }
    
    <div class="fixed bottom-4 right-4 bg-green-700 text-white px-6 py-4 rounded-md shadow-lg" id="notificationPopup">
        @notification
        <button class="ml-4 close-popup">&times;</button>
    </div>

}
